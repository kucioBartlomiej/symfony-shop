{% extends 'Admin/baseAdmin.html.twig' %}

{% block ContentAdmin %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, {attr: {novalidate: 'novalidate'} }) }}
            {{form_widget(form)}}
            <button class="button btn btn-primary btn-submt-form" type="submit">Filter</button>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered">
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Delivery Method</th>
                    <th></th>
                </tr>
                {% for order in pagination %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.orderDate|date('d M Y H:i') }}</td>
                        <td>{{ order.displayStatus }}</td>
                        <td>{{ order.deliveryMethodDisplay }}</td>
                        <td><a class="btn btn-primary" href="{{ path('admin_order_show_single', {'id': order.id}) }}">Show Details</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
    <div class="row pagination pull-right">
        {{  knp_pagination_render(pagination) }}
    </div>
</div>

{% endblock %}