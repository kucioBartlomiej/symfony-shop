{% extends 'Admin/baseAdmin.html.twig' %}

{% block ContentAdmin %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <a class="pull-right btn btn-danger" href="{{ path('admin_product_delete', {'id': product.id}) }}">Delete Product</a>
            </div>
            <div class="col-md-12">
                {{ form_start(form, {attr: {novalidate: 'novalidate'} }) }}
                <div>
                    <img class="img-responsive" style="max-height:200px;" src="{{ asset(product.image) }}" alt="">
                </div>
                {% if product.picture is not null %}
                    <a class="btn btn-danger" href="{{ path('admin_picture_delete', {'id': product.picture.id}) }}">Delete Picture</a>
                {% endif %}
                <div>
                    {{ form_widget(form.pictureFile) }}
                </div>
                {{form_widget(form)}}
                <button class="button btn btn-primary btn-submt-form" type="submit">Create</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}